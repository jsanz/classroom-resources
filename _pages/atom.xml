---
layout: null
permalink: /atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 <title>{{ site.title }}</title>
 <link href="{{ site.url }}/atom.xml" rel="self"/>
 <link href="{{ site.url }}"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>
 {% for page in site.posts limit: 25  %}{% if page.layout == 'post' %} <entry>
   <title>{{ page.title | xml_escape }}</title>
   <link href="{{ site.url }}{{ page.url }}"/>
   <updated>{{ page.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ page.id }}</id>
   <content type="html">{{ page.content | xml_escape | strip }}</content>
 </entry>{% endif %}{% endfor %}
</feed>